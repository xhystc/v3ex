<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xhystc.zhihu.dao.CommentInformDao">
    <resultMap id="commentInformResultMapper" type="com.xhystc.zhihu.model.CommentInform">
        <id column="id" property="id"/>
        <result column="comment_count" property="commentCount"/>
        <result column="last_comment_time" property="lastCommentTime"/>
        <association property="lastCommentUser" column="last_comment_user" javaType="com.xhystc.zhihu.model.User" >
            <id column="uid" property="id"/>
            <result column="name" property="name"/>
            <result column="password" property="password"/>
            <result column="email" property="email"/>
            <result column="iconUrl" property="iconUrl"/>
            <result column="salt" property="salt"/>
            <result column="is_locked" property="isLocked"/>
            <result column="regist_date" property="registDate"/>
        </association>
    </resultMap>

    <insert id="insertCommentInform" parameterType="com.xhystc.zhihu.model.CommentInform">
        INSERT INTO comment_inform(id, last_comment_time, last_comment_user, comment_count)
        VALUES(#{id},#{lastCommentTime},#{lastCommentUser.id},#{commentCount})
    </insert>

    <update id="updateCommentInform" parameterType="com.xhystc.zhihu.model.CommentInform">
        UPDATE comment_inform
        <set>
            <if test="lastCommentTime != null">
                last_comment_time = #{lastCommentTime},
            </if>
            <if test="lastCommentUser != null">
                last_comment_user = #{lastCommentUser.id},
            </if>
            <if test="commentCount != null">
                comment_count = #{commentCount}
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectCommentInform" parameterType="java.lang.String" resultMap="commentInformResultMapper">
        SELECT c.*,u.*,u.id as uid FROM comment_inform c LEFT JOIN user u ON c.last_comment_user = u.id WHERE c.id = #{id}
    </select>

    <update id="increaseCommentInform">
        UPDATE comment_inform SET last_comment_user = #{arg1},last_comment_time = #{arg2},comment_count = comment_count+#{arg3}
        where id = #{arg0}
    </update>
</mapper>




